<script>
    AOS.init();


    function filterProjects(category) {
        const allProjects = document.querySelectorAll('.project-section');
        const allLinks = document.querySelectorAll('.navbar a');


        allLinks.forEach(link => link.classList.remove('active'));


        const clickedLink = Array.from(allLinks).find(link => link.textContent.toLowerCase() === category.replace('-', ' '));
        if (clickedLink) clickedLink.classList.add('active');


        allProjects.forEach(project => {
            if (category === 'all' || project.classList.contains(category)) {
                project.classList.add('active');
                AOS.refresh();
            } else {
                project.classList.remove('active');
            }
        });
    }


    filterProjects('all');
</script>