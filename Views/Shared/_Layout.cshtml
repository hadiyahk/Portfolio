<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/site.css">
    <link rel="icon" href="HaDo.png" type="image/png">



</head>
<body>
    <div class="loader">
        <img src="loading-fast.gif" alt="Loading..." />
    </div>
    <div class="gradient-bg">
        <div class="gradients-container">
            <div class="g1"></div>
            <div class="g2"></div>
            <div class="g3"></div>
            <div class="g4"></div>
            <div class="g5"></div>
            <div class="interactive"></div>
        </div>
    </div>

    <style>

        .hover-image {
            position: relative;
            z-index: 999;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .hover-image:hover {
                transform: scale(1.1);
            }
    </style>
    <header style=" padding: 30px;  position: fixed;
    width: 100%;
    z-index: 999;">
        <div class="container d-flex justify-content-between align-items-center">

            <a href="@Url.Action("Index", "Home")" class="hover-image">
                <img src="HaDo.png" alt="HADO" width="100">
            </a>
            <button class="hamburger closed" id="hamburger" onclick="toggleMenu()">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>
        <div class="nav-overlay" id="navMenu">
            <div class="menu">
                <a href="@Url.Action("Index", "Home")" class="@((ViewContext.RouteData.Values["controller"]?.ToString() == "Home") ? "active" : "")">Home</a>
                <a asp-controller="Projects" asp-action="Index" class="@((ViewContext.RouteData.Values["controller"]?.ToString() == "Projects") ? "active" : "")">Projects</a>
                <a asp-controller="Skills" asp-action="Index" class="@((ViewContext.RouteData.Values["controller"]?.ToString() == "Skills") ? "active" : "")">Skills</a>
                <a asp-controller="AboutMe" asp-action="Index" class="@((ViewContext.RouteData.Values["controller"]?.ToString() == "AboutMe") ? "active" : "")">About Me</a>
            </div>

            <div class="contact-content">
                <h2>Let's Get In Contact</h2>
                <p>Here's my email: HadiyahKhan03@gmail.com</p>
                <a href="mailto:HadiyahKhan03@gmail.com" class="btn">Email Me</a>
            </div>
        </div>
    </header>
    <style>

        .menu a {
            display: inline-block;
            padding: 10px 15px;
            text-decoration: none;
            color: white;
            font-size: 40px;
            position: relative;
            transition: color 0.3s ease;
        }


            .menu a.active {
                color: #FFD700;
            }

                .menu a.active::after {
                    content: '';
                    position: absolute;
                    left: 0;
                    bottom: 0;
                    width: 100%;
                    height: 2px;
                    background-color: #FFD700;
                    transform: scaleX(1);
                    transition: transform 0.3s ease;
                }

            .menu a::after {
                content: '';
                position: absolute;
                left: 0;
                bottom: 0;
                width: 100%;
                height: 2px;
                background-color: #FFD700;
                transform: scaleX(0);
                transform-origin: right;
                transition: transform 0.3s ease;
            }

            .menu a:hover::after {
                transform: scaleX(1);
                transform-origin: left;
            }
    </style>


    <main style="padding-top: 150px">

        <div class="cursor"></div>
        <div class="content-body">
            @RenderBody()
        </div>
    </main>

    <footer class="footer">
        <div class="footer-container">

            <div class="footer-left">
                <h2>Let's work on a project together</h2>
                <a href="mailto:Hadiyahkhan03@gmail.com" class="btn">Email Me</a>
            </div>


            <div class="footer-right">
                <ul class="social-links">
                    <li><a href="https://www.linkedin.com" target="_blank">LinkedIn</a></li>
                    <li><a href="https://github.com" target="_blank">GitHub</a></li>

                </ul>
            </div>
        </div>
    </footer>

    <style>

        .footer {
            margin-top: 200px;
            background-color: #2C3E50;
            z-index: 99;
            padding: 40px 20px;
            color: white;
            text-align: left;
        }

        .footer-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 40px;
            max-width: 1200px;
            margin: 0 auto;
            padding-left: 100px;
            padding-bottom: 50px;
        }


        .footer-left h2 {
            font-size: 1.8em;
            margin-bottom: 20px;
            font-weight: bold;
        }

        .footer-left .btn {
            border: 2px solid #f44336;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            transition: background-color 0.3s ease, color 0.3s ease, transform 0.3s ease;
        }

            .footer-left .btn:hover {
                background-color: #f44336;
                color: white;
                transform: scale(1.05);
            }





        .footer-right ul {
            list-style: none;
            padding: 0;
        }

        .footer-right li {
            margin-bottom: 15px;
        }

        .footer-right a {
            text-decoration: none;
            color: white;
            font-size: 1.2em;
            transition: color 0.3s ease;
        }

            .footer-right a:hover {
                color: #FF6F61;
            }

    </style>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

    <script>

        const cursor = document.querySelector('.cursor');

        document.addEventListener('mousemove', e => {
            cursor.setAttribute("style", "top: " + (e.pageY - 10) + "px; left: " + (e.pageX - 10) + "px;")
        })

        document.addEventListener('click', () => {
            cursor.classList.add("expand");

            setTimeout(() => {
                cursor.classList.remove("expand");
            }, 500)
        })




        function toggleMenu() {
            const navMenu = document.getElementById('navMenu');
            const hamburger = document.getElementById('hamburger');


            navMenu.classList.toggle('show');

            hamburger.classList.toggle('open');
            hamburger.classList.toggle('closed');
        }





        document.addEventListener('DOMContentLoaded', () => {
            const interBubble = document.querySelector('.interactive');
            let curX = 0;
            let curY = 0;
            let tgX = 0;
            let tgY = 0;

            function move() {
                curX += (tgX - curX) / 20;
                curY += (tgY - curY) / 20;
                interBubble.style.transform = `translate(${Math.round(curX)}px, ${Math.round(curY)}px)`;
                requestAnimationFrame(() => {
                    move();
                });
            }

            window.addEventListener('mousemove', (event) => {
                tgX = event.clientX;
                tgY = event.clientY;
            });

            move();
        });




        window.addEventListener('load', function () {
            setTimeout(function () {
                document.body.classList.add('loaded');
            }, 500);
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
