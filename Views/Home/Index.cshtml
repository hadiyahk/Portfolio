@{
    ViewData["Title"] = "Home Page";
}

<div id="projectCarousel" class="carousel slide" data-bs-ride="carousel" style="padding-bottom: 100px;">
    <div class="carousel-inner">

        <div class="carousel-item active">
            <div class="row">
                <div class="col-md-6">
                    <h3 class="animate">Temperature Prediction Using Machine Learning</h3>
                    <p class="animate"><strong>Technology Used:</strong> Python, Matplotlib</p>
                    <p class="animate">This award-winning project utilizes machine learning models to analyze IoT data from industrial refrigerators, predicting temperature trends and triggering alerts for deviations beyond safe thresholds.</p>
                </div>
                <div class="col-md-6">
                    <video class="animate" autoplay loop muted>
                        <source src="temp.mp4" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                </div>
            </div>
        </div>

        <div class="carousel-item">
            <div class="row">
                <div class="col-md-6">
                    <h3 class="animate">Fan Club Web App with ASP.NET</h3>
                    <p class="animate"><strong>Technology Used:</strong> ASP.NET Core, C#</p>
                    <p class="animate">Designed and developed a dynamic Fan Club Web App, featuring user management and subscription functionality, showcasing expertise in ASP.NET Core and Entity Framework.</p>
                </div>
                <div class="col-md-6">
                    <video class="animate" autoplay loop muted>
                        <source src="fanclub.mp4" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                </div>
            </div>
        </div>

        <div class="carousel-item">
            <div class="row">
                <div class="col-md-6">
                    <h3 class="animate">Snake Game Using JavaFX</h3>
                    <p class="animate"><strong>Technology Used:</strong> Java, JavaFX</p>
                    <p class="animate">Developed an interactive Snake game using JavaFX. The game demonstrates proficiency in object-oriented programming and event-driven design.</p>
                </div>
                <div class="col-md-6">
                    <video class="animate" autoplay loop muted>
                        <source src="snakegame.mp4" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                </div>
            </div>
        </div>



    </div>


    <button class="carousel-control-prev" type="button" data-bs-target="#projectCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#projectCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>

    <div class="text-center my-4">
        <a asp-controller="Projects" asp-action="Index" class="btn btn-custom">See All Projects</a>
    </div>

</div>




<section class="full-width text-center" style="background-color: black; color: white; padding: 50px;">
    <h2>About Me</h2>
    <p style="padding: 30px;">I am a passionate developer with experience in building robust web applications and a love for solving complex problems.</p>
    <a asp-controller="AboutMe" asp-action="Index" class="btn-custom">Learn More About Me</a>
</section>


<section class="full-width" style="background-color: white; ">
    <h2 class="text-center">Here's What I Can Help You With</h2>
    <div class="row text-center mt-4" style="padding-left: 300px; padding-right: 300px;">
        <div class="col-md-4">
            <div class="skill-card">
                <h4>Web Development</h4>
                <p>I build responsive and scalable web applications using modern frameworks and best practices.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="skill-card">
                <h4>Agile Methodologies</h4>
                <p>Experienced in Agile workflows, sprint planning, and delivering projects efficiently in a team environment.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="skill-card">
                <h4>Machine Learning</h4>
                <p>I can design and train machine learning models to solve real-world problems using TensorFlow and Keras.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="skill-card">
                <h4>Database Management</h4>
                <p>Skilled in designing, optimizing, and managing relational databases with tools like MariaDB and SQL Server.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="skill-card">
                <h4>Cloud Computing</h4>
                <p>Proficient in deploying, managing, and scaling applications on cloud platforms like AWS and Azure.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="skill-card">
                <h4>UI/UX Design</h4>
                <p>Expert in creating intuitive and visually appealing interfaces that enhance user experience.</p>
            </div>
        </div>
    </div>


    <h2 class="text-center" style="padding-top: 50px; padding-bottom: 50px;">Take a quick look at my skillset!</h2>

    <div class="row text-center mt-4" style="padding-left: 300px; padding-right: 300px;">


        <div id="myCarousel" class="carousel slide" data-bs-ride="false">
            <div class="carousel-inner">

                <div class="carousel-item active">


                    <h3>Web Development</h3>
                    @await Html.PartialAsync("_WebDevelopment")



                </div>
                <div class="carousel-item ">


                    <h3>Programming Languages</h3>
                    @await Html.PartialAsync("_ProgrammingLanguages");



                </div>
                <div class="carousel-item ">


                    <h3>Databases</h3>
                    @await Html.PartialAsync("_Databases");



                </div>
                <div class="carousel-item ">


                    <h3>Tools and Frameworks</h3>
                    @await Html.PartialAsync("_ToolsFrameworks");



                </div>


            </div>


            <button class="skills-carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
                <i class="fas fa-chevron-left" style="color: black; font-size: 50px;"></i>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="skills-carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
                <i class="fas fa-chevron-right" style="color: black; font-size: 50px;"></i>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

    </div>




</section>

<style>
    #myCarousel .carousel-inner .carousel-item {
        margin-left: -100%;
        height: 700px;
    }

        #myCarousel .carousel-inner .carousel-item h3 {
            color: #FF3855;
        }


    .skills-carousel-control-prev,
    .skills-carousel-control-next {
        position: absolute;
        top: 35%;
        transform: translateY(-50%);
        background-color: white;
        border-radius: 50%;
        width: 80px;
        height: 80px;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        z-index: 10;
        border: 1px solid white;
        transition: transform 0.3s ease;
    }

    .skills-carousel-control-prev {
        left: -100px;
    }

    .skills-carousel-control-next {
        right: -100px;
    }


        .skills-carousel-control-prev:hover,
        .skills-carousel-control-next:hover {
            transform: translateY(-50%) scale(1.1);
        }

</style>



<style>
    p strong {
        position: relative;
        padding-left: 10px;
        font-weight: bold;
    }

        p strong::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            width: 4px;
            background-color: #FFD700;
        }

    .full-width {
        width: 100vw;
        position: relative;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        padding: 20px 0;
    }



    .skill-card {
        height: 200px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

        .skill-card h4 {
            margin-bottom: 10px;
            font-size: 1.25rem;
            color: #FF3855;
        }

        .skill-card p {
            font-size: 0.95rem;
        }

</style>

<script>
    document.getElementById('projectCarousel').addEventListener('slid.bs.carousel', function (event) {

        document.querySelectorAll('.carousel-item .animate').forEach(el => {
            el.classList.remove('fade-up', 'fade-right', 'fade-in');
        });

        const activeSlide = event.relatedTarget;
        activeSlide.querySelectorAll('.animate').forEach((el) => {
            if (el.tagName === 'H3') {
                el.classList.add('fade-up');
            } else if (el.tagName === 'P' && el.querySelector('strong')) {
                el.classList.add('fade-right');
            } else if (el.tagName === 'P') {
                el.classList.add('fade-up');
            } else if (el.tagName === 'VIDEO') {
                el.classList.add('fade-in');
            }
        });
    });
</script>