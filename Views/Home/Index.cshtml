        position: relative;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        padding: 20px 0;
    }



    .skill-card {
        height: 200px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

        .skill-card h4 {
            margin-bottom: 10px;
            font-size: 1.25rem;
            color: #FF3855;
        }

        .skill-card p {
            font-size: 0.95rem;
        }

</style>

<script>

    function handleCarouselAnimation(event) {

        document.querySelectorAll('.carousel-item .animate').forEach(el => {
            el.classList.remove('fade-up', 'fade-right', 'fade-in');
        });

        const activeSlide = event.relatedTarget;
        activeSlide.querySelectorAll('.animate').forEach((el) => {
            if (el.tagName === 'H3') {
                el.classList.add('fade-up');
            } else if (el.tagName === 'P' && el.querySelector('strong')) {
                el.classList.add('fade-right');
            } else if (el.tagName === 'P') {
                el.classList.add('fade-up');
            } else if (el.tagName === 'VIDEO') {
                el.classList.add('fade-in');
            } else {
                el.classList.add('fade-in');
            }
        });
    }


    document.getElementById('projectCarousel').addEventListener('slid.bs.carousel', handleCarouselAnimation);

    document.getElementById('myCarousel').addEventListener('slid.bs.carousel', handleCarouselAnimation);

</script>